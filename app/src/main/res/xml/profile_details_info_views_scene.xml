<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/profiles_fragment_main_transition"
        app:constraintSetEnd="@id/profile_details_main_scene_end"
        app:constraintSetStart="@id/profile_details_main_scene_start"
        app:duration="350"
        app:motionInterpolator="linear" />


    <ConstraintSet android:id="@+id/profile_details_main_scene_start">

        <Constraint
            android:id="@+id/profile_details_main_info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:translationX="-2.5in"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/profile_details_description_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="12dp"
            android:translationX="-2.5in"
            app:layout_constraintTop_toBottomOf="@id/profile_details_main_info_view" />

        <Constraint
            android:id="@+id/profile_details_interests_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="12dp"
            android:translationX="2.5in"
            app:layout_constraintTop_toBottomOf="@id/profile_details_description_view" />

        <Constraint
            android:id="@+id/profile_details_images_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="12dp"
            android:translationX="-2.5in"
            app:layout_constraintTop_toBottomOf="@id/profile_details_interests_view" />


    </ConstraintSet>


    <ConstraintSet android:id="@+id/profile_details_main_scene_end">


        <Constraint
            android:id="@+id/profile_details_main_info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:translationX="0in"
            app:layout_constraintTop_toTopOf="parent" />


        <Constraint
            android:id="@+id/profile_details_description_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="12dp"
            android:translationX="0in"
            app:layout_constraintTop_toBottomOf="@id/profile_details_main_info_view" />


        <Constraint
            android:id="@+id/profile_details_interests_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="12dp"
            android:translationX="0in"
            app:layout_constraintTop_toBottomOf="@id/profile_details_description_view" />


        <Constraint
            android:id="@+id/profile_details_images_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="12dp"
            android:translationX="0in"
            app:cardBackgroundColor="@color/colorAccent" />


    </ConstraintSet>
</MotionScene>