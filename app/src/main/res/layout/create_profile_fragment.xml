<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.example.randomchatapplication.ui.create_profile.profile.CreateProfileFragmentViewModel" />
    </data>
    <ScrollView
        android:id="@+id/create_profile_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:background="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:id="@+id/fields_container"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">
            <Button
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/login_button_drawable"
                android:onClick="@{() -> viewModel.onClick()}"
                android:text="Wyszukaj"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</layout>
