<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.randomchatapplication.ui.create_profile.CreateProfileFragmentViewModel" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarTrackVertical="@color/colorPrimary"
        tools:context=".ui.create_profile.CreateProfileFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Imię:"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryDark"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.textAmount}"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="Imię"
                    android:maxLength="@{viewModel.maxLength}"
                    android:layout_marginTop="2dp"
                    android:inputType="text"
                    app:onTextChangedListener="@{viewModel.textChangeListener}"
                    android:background="@drawable/border"
                    android:imeOptions="actionNext"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp"
                    android:text="Tego pola nie można potem edytować"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="9dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="16sp"
                    android:text="Preferencje wiekowe"
                    android:textColor="@color/colorPrimaryDark" />

                <com.example.randomchatapplication.custom_views.CustomRangeSeekbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:min_value="18"
                    app:max_value="60"
                    app:gap="2"
                    app:seekbarListener="@{viewModel.seekBarListener}"
                    app:steps="1"
                    app:bar_color="@color/colorAccent"
                    app:bar_highlight_color="@color/colorPrimary"
                    app:data_type="_integer"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{viewModel.leftValue}"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:text="@{viewModel.rightValue}"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </ScrollView>
</layout>
