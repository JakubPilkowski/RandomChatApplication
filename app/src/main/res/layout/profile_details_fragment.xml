<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.randomchatapplication.ui.profiles.profile_details.ProfileDetailsViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/iconGrayLight"
        app:layoutDescription="@xml/profile_details_scene"
        tools:context=".ui.profiles.profile_details.ProfileDetailsFragment">

        <ScrollView
            android:id="@+id/profile_details_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/single_profile_more_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="fitXY"
                        app:imageUrl="@{viewModel.imageUrl}" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    app:contentPadding="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="30dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Podstawowe dane"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:drawableStart="@drawable/ic_user"
                                android:drawablePadding="6dp"
                                android:text="@{viewModel.name}"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/ic_clock"
                                android:drawablePadding="6dp"
                                android:text="@{viewModel.age}"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Tmp miasto"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:drawablePadding="6dp"
                            android:drawableStart="@drawable/ic_city"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Tmp województwo"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:drawablePadding="6dp"
                            android:drawableStart="@drawable/ic_voivodeship"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="30dp"
                    app:contentPadding="12dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Preferencje i cele"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_male"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:drawablePadding="6dp"
                            android:text="Tmp płeć"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tmp orientacja"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginEnd="12dp"
                            android:textColor="@color/colorBlack"
                            android:drawableStart="@drawable/ic_heart"
                            android:drawablePadding="6dp"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tmp cel"
                            android:textColor="@color/colorBlack"
                            android:layout_marginBottom="12dp"
                            android:drawableStart="@drawable/ic_target"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:drawablePadding="6dp"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tmp motto"
                            android:textColor="@color/colorBlack"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:drawableStart="@drawable/ic_strong"
                            android:drawablePadding="6dp"
                            android:textSize="18sp"
                            android:layout_marginBottom="12dp"
                            />
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="30dp"
                    app:contentPadding="12dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Coś o sobie"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.description}"
                            android:textColor="@color/colorBlack"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:textSize="16sp"
                            android:layout_marginBottom="12dp"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="30dp"
                    app:contentPadding="12dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="Zdjęcia"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="24sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>
