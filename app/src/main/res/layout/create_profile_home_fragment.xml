<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.randomchatapplication.ui.create_profile.home.CreateProfileHomeFragmentViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        >
        <ScrollView
            android:id="@+id/create_profile_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            tools:context=".ui.create_profile.home.CreateProfileHomeFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@{viewModel.stepTitle}"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/colorAccent"
                    android:max="@{viewModel.dotsCount}"
                    app:progressWithAnim="@{viewModel.step}"
                    android:progressTint="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="Podstawowe dane"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <com.example.randomchatapplication.custom_views.CustomViewPager
                    android:id="@+id/create_profile_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="24dp"
                    android:overScrollMode="never"
                    app:currentItem="@{viewModel.currentItem}"
                    app:setOffScreenPageLimit="@{viewModel.dotsCount}"
                    app:swipeEnabled="@{viewModel.swipeEnabled}"
                    app:viewPagerAdapter="@{viewModel.pageListAdapter}" />

            </LinearLayout>
        </ScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@id/buttonsContainer"
            android:background="@drawable/gradient_fade_bottom"
            />
        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:weightSum="1">

            <Button
                android:id="@+id/create_profile_back_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/create_profile_back_button_background"
                android:drawableEnd="@drawable/ic_heartbreak_red_24dp"
                android:onClick="@{()->viewModel.onBackClick()}"
                android:padding="6dp"
                android:text="@string/back"
                android:textColor="@color/colorPrimaryDark" />

            <com.example.randomchatapplication.custom_views.DotsView
                android:id="@+id/dots_view"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:dotsCount="@{viewModel.dotsCount}" />

            <Button
                android:id="@+id/create_profile_next_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/create_profile_next_button_background"
                android:drawableStart="@drawable/ic_heart_24dp"
                android:onClick="@{()->viewModel.onNextClick()}"
                android:padding="6dp"
                android:text="@string/go_next"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </RelativeLayout>
</layout>
