<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.randomchatapplication.activites.profile_creation.CreateProfileViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@{viewModel.stepTitle}"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/colorAccent"
                    android:max="@{viewModel.dotsCount}"
                    android:progressTint="@color/colorPrimaryDark"
                    app:progressWithAnim="@{viewModel.step}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="Podstawowe dane"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/create_profile_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".activites.profile_creation.CreateProfileActivity" />
                    <View
                        android:layout_width="match_parent"
                        android:id="@+id/fade_anim_top"
                        android:layout_height="30dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/gradient_fade_top"
                        />
                </RelativeLayout>
                 <!--                <com.example.randomchatapplication.custom_views.CustomViewPager-->
                <!--                    android:id="@+id/create_profile_viewpager"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginStart="24dp"-->
                <!--                    android:layout_marginTop="12dp"-->
                <!--                    android:layout_marginEnd="24dp"-->
                <!--                    android:overScrollMode="never"-->
                <!--                    app:currentItem="@{viewModel.currentItem}"-->
                <!--                    app:setOffScreenPageLimit="@{viewModel.dotsCount}"-->
                <!--                    app:swipeEnabled="@{viewModel.swipeEnabled}"-->
                <!--                    app:viewPagerAdapter="@{viewModel.pageListAdapter}" />-->

            </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_above="@id/buttonsContainer"
            android:background="@drawable/gradient_fade_bottom" />

        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:weightSum="1">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:drawablePadding="3dp"
                android:drawableEnd="@drawable/ic_heartbreak"
                android:text="@string/back"
                android:textSize="12sp"
                android:onClick="@{() -> viewModel.onBackClick()}"
                android:background="@drawable/ic_back"
                android:textColor="@color/colorAccent"
                />

<!--            <Button-->
<!--                android:id="@+id/create_profile_back_button"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:background="@drawable/create_profile_back_button_background"-->
<!--                android:drawableEnd="@drawable/ic_heartbreak_red_24dp"-->
<!--                android:onClick="@{()->viewModel.onBackClick()}"-->
<!--                android:padding="6dp"-->
<!--                android:text="@string/back"-->
<!--                android:textColor="@color/colorPrimaryDark" />-->

            <com.example.randomchatapplication.custom_views.DotsView
                android:id="@+id/dots_view"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                app:dotsCount="@{viewModel.dotsCount}" />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/ic_heart_white"
                android:onClick="@{() -> viewModel.onNextClick()}"
                android:text="@string/go_next"
                android:textSize="12sp"
                android:background="@drawable/ic_next"
                android:textColor="@color/colorAccent"
                />
<!--            <Button-->
<!--                android:id="@+id/create_profile_next_button"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:background="@drawable/create_profile_next_button_background"-->
<!--                android:drawableStart="@drawable/ic_heart_24dp"-->
<!--                android:onClick="@{()->viewModel.onNextClick()}"-->
<!--                android:padding="6dp"-->
<!--                android:text="@string/go_next"-->
<!--                android:textColor="@color/colorPrimaryDark" />-->
        </LinearLayout>

        <FrameLayout
            android:id="@+id/spinner_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


</layout>
